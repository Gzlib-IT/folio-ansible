apiVersion: v1
kind: Deployment
metadata:
  name: "{{ module_item.replace(".","-").lower() }}"
  labels:
    app: "{{ module_item.replace(".","-").lower() }}"
  namespace: "{{ namespace }}"
spec:
  selector:
    matchLabels:
      app: "{{ module_item.replace(".","-").lower() }}"
  replicas: 1
  template:
    metadata:
      labels:
        app: "{{ module_item.replace(".","-").lower() }}"
    spec:
      containers:
        - name: "{{ module_item.replace(".","-").lower() }}"
          image: {{ module_descriptor.launchDescriptor.dockerImage }}
          env:
          - name: POD_NAME
            valueFrom:
              fieldRef:
                fieldPath: metadata.name
          {% if module_descriptor_metadata.containerMemory -%}
          - name: JAVA_OPTIONS
            value: -Xmx{{ module_descriptor_metadata.containerMemory }}m
          {% else %}
            value: ""
          {% endif %}

          envFrom:
          - secretRef:
              name: {{ db_secret_name }}
              optional: true
             

