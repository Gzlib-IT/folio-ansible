apiVersion: v1
kind: Secret
metadata:
  name: {{ db_secret_name }}
  namespace: {{ namespace }}
type: Opaque
stringData:
  DB_DATABASE: {{ db_database }}
  DB_HOST: {{ pg_host }}
  DB_MAXPOOLSIZE: "{{ db_maxpoolsize }}"
  DB_PASSWORD: {{ db_password }}
  DB_PORT: "{{ pg_port }}"
  DB_USERNAME: {{ db_username }}